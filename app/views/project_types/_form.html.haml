= form_for(@project_type) do |f|
  - if @project_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@project_type.errors.count, "error")
        prohibited this project_type from being saved:
      %ul
        - @project_type.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
